<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="348dp"
        android:layout_height="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlMap"
        app:layout_constraintVertical_bias="0.476">

        <ImageButton
            android:id="@+id/btnBlArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bl_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnBrArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_br_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnDownArrow" />

        <ImageButton
            android:id="@+id/btnDownArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bottom_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBlArrow" />

        <ImageButton
            android:id="@+id/btnTrArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tr_arrow"
            app:layout_constraintBottom_toTopOf="@+id/btnBrArrow"
            app:layout_constraintStart_toEndOf="@+id/btnTopArrow" />

        <ImageButton
            android:id="@+id/btnTlArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tl_arrow"
            app:layout_constraintBottom_toTopOf="@+id/btnBlArrow"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnTopArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_top_arrow"
            app:layout_constraintBottom_toTopOf="@+id/btnDownArrow"
            app:layout_constraintStart_toEndOf="@+id/btnTlArrow" />

        <ImageView
            android:id="@+id/ivCar"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_car_up"
            app:layout_constraintStart_toEndOf="@+id/tvCarObject"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCarObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car"
            android:textSize="30px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvObstacle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Obstacle"
            android:textSize="30px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCar" />

        <ImageView
            android:id="@+id/ivObstacle"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_obstacle"
            app:layout_constraintStart_toEndOf="@+id/tvObstacle"
            app:layout_constraintTop_toTopOf="@+id/tvObstacle" />

        <Button
            android:id="@+id/btnClearMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Clear Map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSelectedObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Selected: None"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvObstacle" />

        <Button
            android:id="@+id/btnRotateSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate Selected Object"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSelectedObject" />

        <Button
            android:id="@+id/btnClearSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Selected Object"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRotateSelected" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="258dp"
        android:layout_height="343dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/rlMap"
        app:layout_constraintVertical_bias="0.476">

        <EditText
            android:id="@+id/etSendMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Message Here"
            app:layout_constraintEnd_toStartOf="@+id/btnSendMsg"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSendMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            app:layout_constraintStart_toEndOf="@+id/etSendMsg"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/llReceiveMsg"
            android:layout_width="257dp"
            android:layout_height="294dp"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSendMsg">

            <TextView
                android:id="@+id/tvIncMsgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="vertical" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rlMap"
        android:layout_width="640dp"
        android:layout_height="640dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032">

    </RelativeLayout>

    <TextView
        android:id="@+id/tvRoboStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="256dp"
        android:text="Status: None"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnImageRecognition"
        app:layout_constraintTop_toBottomOf="@+id/rlMap"
        app:layout_constraintVertical_bias="0.591" />

    <Button
        android:id="@+id/btnImageRecognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Recognition"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toStartOf="@+id/tvRoboStatus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnFastestPath"
        app:layout_constraintTop_toBottomOf="@+id/rlMap"
        app:layout_constraintVertical_bias="0.709" />

    <Button
        android:id="@+id/btnFastestPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fastest Path"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toStartOf="@+id/btnImageRecognition"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlMap"
        app:layout_constraintVertical_bias="0.709" />


</androidx.constraintlayout.widget.ConstraintLayout>